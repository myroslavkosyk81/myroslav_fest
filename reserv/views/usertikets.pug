
extends main_layout.pug
block content
  .container-sm
  .bg-image(style="background-image: url('../beach.jpg'); height: 100vh")
    .row.justify-content-md-center
      .col-md-9
        .placeholder
          .row.justify-content-md-center
            .col-md-8
              figure.text-center
                blockquote.blockquote
                  
                  ul
                    each ticket in tickets
                      form(method='get' action='/deleteone/' + ticket._id)
                        input(type='hidden' value='delete')
                        button.btn.btn-primary Видалити квиток на фільм
                      h2 #[a(href='/ticket/' + ticket._id) #{ticket.name}, ви можете переглянути ваш квиток на фільм]
                      //p Привіт, #{ticket.name}. Дякуємо за реєстрацію!
                  h2 #[a(href='/') Перейти на головну сторінку]

